<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margins"
        android:paddingRight="@dimen/margins">

        <!-- Start Wars logo image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/intro_text"
            android:src="@drawable/starwars" />

        <!-- Title of the quiz -->
        <TextView
            style="@style/title_main"
            android:text="@string/intro_text" />

        <!-- Player inserts their name -->
        <EditText
            android:id="@+id/name_text_view"
            style="@style/editText_style"
            android:hint="@string/user_name" />

        <!-- The button takes the player to the quiz -->
        <Button
            android:id="@+id/start_quiz"
            style="@style/button_style"
            android:text="@string/start_quiz" />
    </LinearLayout>
</ScrollView>
